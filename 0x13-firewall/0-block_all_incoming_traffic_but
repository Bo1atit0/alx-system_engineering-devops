#!/usr/bin/env bash
# Install ufw (Uncomplicated Firewall)

# Update package Info
sudo apt update -y

# Install ufw
sudo apt install ufw

# Set default policies
set ufw default deny incoming
set ufw default allow outgoing

# Allow ssh (port 22)
sudo ufw allow 22

# Allow HTTPS (port 443)
sudo ufw allow 443

# Allow HTTP (port 80)
sudo ufw allow 80

# Enable ufw
sudo ufw enable
